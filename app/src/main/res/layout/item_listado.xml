<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="220dp"
    android:layout_weight="100"
    android:weightSum="100"
    android:layout_margin="2dp"
    android:background="#fff"
    android:orientation="vertical">


    <LinearLayout android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="30"
        android:weightSum="100"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/llPic"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="65">


            <ImageView
                android:id="@+id/imgFotoEstudiante"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="6dp"
                android:layout_marginRight="12dp"
                android:layout_marginBottom="6dp"

                android:src="@drawable/usuario"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="35"
            android:weightSum="60"
            android:orientation="vertical"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="30"
                android:layout_margin="6dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:id="@+id/lblHora"
                    android:text="00:00"></TextView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:id="@+id/lblParada"
                    android:layout_marginTop="4dp"
                    android:layout_below="@+id/lblHora"
                    android:text="Parada:"></TextView>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="30"
                android:layout_margin="8dp">

                <TextView
                    android:id="@+id/lblDireccion"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="DirecciÃ³n: "></TextView>


            </RelativeLayout>




        </LinearLayout>

    </LinearLayout>
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="70"
        android:weightSum="100"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="65">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical|center_horizontal"
                android:text="Nombre"
                android:layout_centerInParent="true"
                android:id="@+id/lblNombreEstudiante"></TextView>

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/llBotones"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="35"
            android:weightSum="100">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:clickable="true"
                android:text="Inasistencia"
                android:id="@+id/btnInasistencia"
                android:focusable="false"
                android:layout_gravity="center_horizontal"
                android:textColor="#FF4300"
                android:gravity="center_horizontal|center_vertical"
                android:background="#fff"></TextView>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>