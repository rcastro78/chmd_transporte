    <RelativeLayout
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:weightSum="100"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:minHeight="140dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"


                    android:id="@+id/llAsistencia"
                    android:orientation="vertical"
                    android:weightSum="4"
                    android:background="#fff">


                    <TextView
                        android:id="@+id/lblRuta"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_horizontal|center_vertical"
                        android:text="Ruta"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="24dp"
                        android:minHeight="32dp"
                        android:visibility="visible"></TextView>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <SearchView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/searchView"
                            android:minHeight="48dp"
                            android:queryHint="Buscar..."></SearchView>

                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:weightSum="100">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="65"
                            android:background="@color/textoMasOscuro">

                            <TextView
                                android:id="@+id/lblAscDesc"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_centerInParent="true"
                                android:gravity="center_vertical|center_horizontal"
                                android:text="Ascensos/Total"
                                android:textColor="#fff"></TextView>


                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="35"
                            android:background="#C0C0C0">


                            <TextView
                                android:id="@+id/lblTotales"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_centerInParent="true"
                                android:gravity="center_vertical|center_horizontal"
                                android:text="0/0"
                                android:textColor="#000"></TextView>


                        </RelativeLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:weightSum="100">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="65"
                            android:background="@color/textoMasOscuro">


                            <TextView
                                android:id="@+id/lblInasist"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_centerInParent="true"
                                android:gravity="center_vertical|center_horizontal"
                                android:text="Inasistencias"
                                android:textColor="#fff"></TextView>


                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="35"
                            android:background="#C0C0C0">

                            <TextView
                                android:id="@+id/lblTotalInasist"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_centerInParent="true"
                                android:gravity="center_vertical|center_horizontal"
                                android:text="0"
                                android:textColor="#000"></TextView>


                        </RelativeLayout>

                    </LinearLayout>


                </LinearLayout>
            </RelativeLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="100"

                android:orientation="vertical"
                android:weightSum="100">

                <ListView
                    android:id="@android:id/list"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="10"></ListView>

                <Button
                    android:id="@+id/btnCerrarRegistro"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="8dp"
                    android:layout_weight="90"
                    android:background="@color/colorPrimary"
                    android:minHeight="36dp"
                    android:text="Cerrar Registro"
                    android:textAlignment="center"
                    android:textColor="@color/textoMasOscuro"></Button>

            </LinearLayout>







        </LinearLayout>





    </RelativeLayout>
